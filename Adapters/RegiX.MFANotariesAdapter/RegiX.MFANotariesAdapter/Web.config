<?xml version="1.0"?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  </configSections>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.0"/>
  </startup>
  <runtime>
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <dependentAssembly>
        <assemblyIdentity name="Npgsql" publicKeyToken="5d8b90d52f46fda7" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-4.0.4.0" newVersion="4.0.4.0" />
      </dependentAssembly>
    </assemblyBinding>
  </runtime>
  <system.serviceModel>
    <behaviors>
      <serviceBehaviors>
        <behavior name="DefaultBehaviour">
          <dataContractSerializer maxItemsInObjectGraph="2147483647"/>
          <!--Forbid metadata discovery-->
          <serviceMetadata httpGetEnabled="true" httpsGetEnabled="false" />
          <serviceDebug includeExceptionDetailInFaults="True" />
        </behavior>
      </serviceBehaviors>
      <endpointBehaviors>
        <behavior name="DefaultEndpointBehaviour">
          <dataContractSerializer maxItemsInObjectGraph="2147483647"/>
        </behavior>
        <behavior name="RestEndpointBehavior">
          <webHttp />
        </behavior>
      </endpointBehaviors>
    </behaviors>
    <bindings>
      <basicHttpBinding>
        <binding name="DefaultBinding"
                  closeTimeout="00:01:00"
                  openTimeout="00:01:00"
                  receiveTimeout="00:10:00"
                  sendTimeout="00:10:00"
                  transferMode="StreamedResponse"
                  maxReceivedMessageSize="26214400"
                  maxBufferSize="26214400">
          <readerQuotas maxDepth="256"
                        maxStringContentLength="2147483647"
                        maxArrayLength="2147483647"
                        maxBytesPerRead="2147483647"
                        maxNameTableCharCount="2147483647"/>
        </binding>
      </basicHttpBinding>
      <webHttpBinding>
        <binding name="WebHttpBindingConfiguration"
                  closeTimeout="00:01:00"
                  openTimeout="00:01:00"
                  receiveTimeout="00:10:00"
                  sendTimeout="00:10:00"
                  transferMode="StreamedResponse"
                  maxReceivedMessageSize="26214400"
                  maxBufferSize="26214400">
          <readerQuotas maxDepth="256"
                        maxStringContentLength="2147483647"
                        maxArrayLength="2147483647"
                        maxBytesPerRead="2147483647"
                        maxNameTableCharCount="2147483647"/>
        </binding>
      </webHttpBinding>
    </bindings>
    <services>
      <service behaviorConfiguration="DefaultBehaviour" name="TechnoLogica.RegiX.MFANotariesAdapter.AdapterService.MFANotariesAdapter">
        <endpoint
            name="IMFANotariesAdapter"
            address=""
            binding="basicHttpBinding"
            bindingConfiguration="DefaultBinding"
            behaviorConfiguration="DefaultEndpointBehaviour"
            contract="TechnoLogica.RegiX.MFANotariesAdapter.AdapterService.IMFANotariesAdapter">
        </endpoint>
      </service>
    </services>
  </system.serviceModel>
  <log4net>
    <appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
      <file value="../Logs/AdapterLogs/log.txt" />
      <encoding value="utf-8" />
      <appendToFile value="true" />
      <rollingStyle value="Size" />
      <maxSizeRollBackups value="100" />
      <maximumFileSize value="5120KB" />
      <staticLogFileName value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger [%property{NDC}] - %message%newline" />
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <levelMin value="INFO" />
        <levelMax value="WARN" />
      </filter>
    </appender>
    <appender name="ErrorsAppender" type="log4net.Appender.RollingFileAppender">
      <file value="../Logs/AdapterLogs/log_errors.txt" />
      <encoding value="utf-8" />
      <appendToFile value="true" />
      <rollingStyle value="Size" />
      <maxSizeRollBackups value="100" />
      <maximumFileSize value="5120KB" />
      <staticLogFileName value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger [%property{NDC}] - %message%newline" />
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <levelMin value="ERROR" />
        <levelMax value="FATAL" />
      </filter>
    </appender>
    <root>
      <level value="ALL" />
      <appender-ref ref="RollingFileAppender" />
      <appender-ref ref="ErrorsAppender" />
    </root>
  </log4net>
  <appSettings>
    <add key="LogFullAccomodationPlaceRequest" value="true" />
    <add key="LogFullAccomodationRegisterRequest" value="true" />

    <add key="CertificateFindValue" value="f2 91 ff 61 d4 a2 04 26 d2 11 43 ea 86 57 5f e8 d8 9c 29 a4" />
    <add key="CertificateStoreLocation" value="LocalMachine" />
    <add key="CertificateStoreName" value="My" />
    <add key="CertificateX509FindType" value="FindByThumbprint" />
    <add key="SignResponse" value="false" />
  </appSettings>
</configuration>
